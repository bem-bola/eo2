{% extends 'base-admin.html.twig' %}

{% block title %}Se connecter {% endblock %}

{% block body %}
<main class="bg-gradient-primary">
    <div class="container">
            <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Se connecter</h1>
                                    </div>
                                    <form method="post"  class="user">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                        {% if app.user %}
                                            {# <div class="mb-3">
                                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                            </div> #}
                                        {% endif %}
                                        <div class="form-group">
                                            <input type="email" value="{{ last_username }}" name="email" class="form-control form-control-user" autocomplete="email" placeholder="Entrer votre adresse email" required autofocus>
                                        </div>
                                        <div class="input-group mb-3">
                                            <input type="password" name="password" id="inputPassword" class="form-control form-control-user inputBorderRNone" autocomplete="current-password" required placeholder="Mot de passe">
                                            <span class="input-group-text radiusl50 showPassword" type="button"><i class="bi bi-eye-fill"></i></span>
                                            <span class="input-group-text radiusl50 hidePassword dNone" type="button"><i class="bi bi-eye-slash-fill"></i></span>
                                        </div>
                    
                                        
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                        <button class="btn btn-primary btn-user btn-block" type="submit">
                                            Se connecter
                                        </button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="{{ path('app_register') }}">Créer un nouveau compte</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</main>
{% endblock %}
