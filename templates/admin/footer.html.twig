{% extends 'base-admin.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<style>
    .form{
        width: 80%;
        margin-left: 10%;
        color: #858796;
    }
    .form-switch{
        width: 90%;
        margin-left: 5%;
        color: #858796;
    }
    .color-admin-grey{
        color: #858796;
    }
    .height-img-video-admin{
        height: 100%;
    }
    .small-text{
        font-size: 0.6em;
    }
</style>
{% set currentPath = app.request.requesturi %}
{% set namePath = app.request.attributes.get('_route') %}

<main id='zone_4_admin'>
    <div id="wrapper">
        {% include 'header-admin.html.twig' %}

        <div id="content-wrapper" class="d-flex flex-column">
            
            <!-- Main Content -->
            <div id="content" class="content">

                {% include '_nav-admin.html.twig' %}

                {# ADDFLASH ZONE DE TEXTE #}
                {# {% for message in app.flashes('success_text_3') %}
                    <div class="bg-success text-white text-center col-md-6 mx-auto rounded p-3 mb-3">
                        {{ message }} 
                    </div> 
                {% endfor %} #}

                {# Modification d'un slider #}
                

                    <h5 class="text-center color-admin-grey mt-5 mb-3" id="infos">Footer</h5>
                    <div class="flex form mt-5">
                
                        {{ form_start(forms, {'attr': {'class': 'form-group col-12'}}) }}

                            {{ form_label(forms.text1, 'Adresse:', {'label_attr': {'class': 'form-label col-12 p-0 mt-2'}}) }}
                            {{ form_widget(forms.text1, {'attr': {'class': 'form-control form-control-sm mb-2 col-12'}}) }}

                            {{ form_label(forms.text2, 'Autre:', {'label_attr': {'class': 'form-label col-12 p-0 mt-2'}}) }}
                            {{ form_widget(forms.text2, {'attr': {'class': 'form-control form-control-sm mb-2 col-12'}}) }}
                            
                            {{ form_row(forms.save, {'attr': {'class': 'btn btn-primary btn-submit mt-3'}}) }}

                        {{ form_end(forms) }}
                    </div>
            </div>
            {% include 'footer-admin.html.twig' %}
        </div>
    </div>
</main>

{% endblock %}
